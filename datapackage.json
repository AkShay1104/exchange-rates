  "resources": [
    {
      "path": "data/yearly.csv",
      "profile": "tabular-data-resource",
      "encoding": "utf-8",
      "name": "yearly",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [
          {
            "name": "Date",
            "type": "date",
            "format": "default",
            "description": "Date in ISO format"
          },
          {
            "name": "Country",
            "type": "string",
            "format": "default",
            "description": "Name of a country"
          },
          {
            "name": "Value",
            "type": "number",
            "format": "default",
            "description": "Foreign Exchange Rate to USD. Only AUD, IEP, NZD, GBP and EUR to USD."
          }
        ],
        "missingValues": [
            ""
        ]
      }
    },
    {
      "path": "data/monthly.csv",
      "profile": "tabular-data-resource",
