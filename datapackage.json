      "name": "daily",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [
          {
            "name": "Date",
            "type": "date",
            "format": "default",
            "description": "Date in ISO format"
          },
          {
            "name": "Country",
